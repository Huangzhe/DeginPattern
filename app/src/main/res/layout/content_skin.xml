<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sh.lynn.hz.developbox.uieffect.SkinActivity"
    xmlns:skin="http://schemas.android.com/android/skin"
    skin:enable="true"
    android:orientation="vertical"
    tools:showIn="@layout/activity_skin">

    <TextView
        android:id="@+id/tv_skin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg"
        android:gravity="center"
        android:text="看这里，这里"
        android:textColor="@color/textColor"
        skin:enable="true"
      />

    <Button
        android:id="@+id/btn_changeSkin"
        android:text="换皮肤SKIN_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    <Button
        android:id="@+id/btn_changeSkin2"
        android:text="换皮肤SKIN_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
